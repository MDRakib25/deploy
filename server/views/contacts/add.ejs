<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Content for add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="post" action="/contact-list/add"> <!-- Make sure the form action matches your route -->
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter your name" name="Contact_Name" required>
                </div>
                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter your Number" name="Contact_Number" required>
                </div>
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter your Email" name="Email_Address" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>
                <a href="/contact-list" class="btn btn-primary">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>


